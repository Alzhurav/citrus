<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="HttpWebSocket_2_ITest">
    <meta-info>
      <author>Martin Maher</author>
      <creationdate>2015-07-22</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2015-08-03T00:00:00</last-updated-on>
    </meta-info>

    <description>Test sends and receives messages via web socket connection. This time messages are sliced into pieces.</description>

    <actions>
      <echo>
        <message>Test: Send multiple WebSocket request via client and receive message on server when last message was sent.</message>
      </echo>

      <send endpoint="webSocketClient1">
        <message type="json">
          <data>
            <![CDATA[
            [
            {
            "event" : "client_message_1",
            "timestamp" : "citrus:currentDate()"
            },
            ]]>
          </data>
        </message>
        <header>
          <element name="citrus_websocket_is_last" value="false"/>
        </header>
      </send>

      <expect-timeout endpoint="webSocketEndpoint1">
      </expect-timeout>

      <send endpoint="webSocketClient1">
        <message type="json">
          <data>
            <![CDATA[
            {
            "event" : "client_message_2",
            "timestamp" : "citrus:currentDate()"
            }
            ]
            ]]>
          </data>
        </message>
        <header>
          <element name="citrus_websocket_is_last" value="true"/>
        </header>
      </send>

      <receive endpoint="webSocketEndpoint1">
        <message type="json">
          <data>
            <![CDATA[
            [
              {
              "event" : "client_message_1",
              "timestamp" : "@ignore@"
              },
              {
              "event" : "client_message_2",
              "timestamp" : "@ignore@"
              }
            ]
            ]]>
          </data>
        </message>
      </receive>

    </actions>
  </testcase>
</spring:beans>