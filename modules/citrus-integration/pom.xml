<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <artifactId>citrus</artifactId>
    <groupId>com.consol.citrus</groupId>
    <version>2.6-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  
  <groupId>com.consol.citrus</groupId>
  <artifactId>citrus-integration</artifactId>
  <name>citrus-integration</name>

  <properties>
    <citrus.serverPort>19080</citrus.serverPort>
    <citrus.stopPort>19080</citrus.stopPort>
  </properties>

  <build>
    <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-failsafe-plugin</artifactId>
            <configuration> 
                <junitArtifactName>none:none</junitArtifactName>
                <excludes>
                  <exclude>**/junit/*.java</exclude>
                </excludes>
            </configuration>
            <executions>
              <execution>
                  <id>junit-tests</id>
                  <phase>integration-test</phase>
                  <goals>
                      <goal>integration-test</goal>
                  </goals>
                  <configuration>
                      <junitArtifactName>junit:junit</junitArtifactName> 
                      <testNGArtifactName>none:none</testNGArtifactName>
                      <excludes>
                        <exclude>none</exclude>
                      </excludes>
                      <includes>
                        <include>**/junit/*.java</include>
                      </includes>
                  </configuration>
              </execution>
            </executions>
        </plugin>

        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>jaxb2-maven-plugin</artifactId>
          <executions>
            <execution>
              <goals>
                <goal>xjc</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <extension>true</extension>
            <wsdl>false</wsdl>
            <xmlschema>true</xmlschema>
            <schemaDirectory>src/main/resources/com/consol/citrus/demo</schemaDirectory>
            <bindingDirectory>src/main/resources/com/consol/citrus/demo</bindingDirectory>
            <schemaFiles>**/*.xsd</schemaFiles>
          </configuration>
        </plugin>
    </plugins>

  	<testSourceDirectory>src/it/java</testSourceDirectory>
    <testResources>
        <testResource>
            <directory>src/it/resources</directory>
            <includes>
                <include>**</include>
            </includes>
        </testResource>
    </testResources>
  </build>

