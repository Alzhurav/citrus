<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:jmx="http://www.citrusframework.org/schema/jmx/testcase"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans 
                                  http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/jmx/testcase
                                  http://www.citrusframework.org/schema/jmx/testcase/citrus-jmx-testcase.xsd
                                  http://www.citrusframework.org/schema/testcase 
                                  http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="JmxEndpointIT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2015-09-14</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2015-09-14T00:00:00</last-updated-on>
    </meta-info>

    <description>Test jmx client and server endpoints.</description>

    <actions>
      <echo>
        <message>Call JMX mbean server</message>
      </echo>

      <send endpoint="jmxClient">
        <message>
          <data></data>
        </message>
        <header>
          <element name="citrus_jmx_mbean" value="java.lang:type=Memory"/>
          <element name="citrus_jmx_attribute" value="Verbose"/>
        </header>
      </send>

      <receive endpoint="jmxClient">
        <message type="plaintext">
          <data>false</data>
        </message>
      </receive>

      <send endpoint="jmxClient">
        <message>
          <data></data>
        </message>
        <header>
          <element name="citrus_jmx_mbean" value="java.lang:type=Memory"/>
          <element name="citrus_jmx_attribute" value="Verbose"/>
          <element name="citrus_jmx_value" value="true" type="boolean"/>
        </header>
      </send>

      <send endpoint="jmxClient">
        <message>
          <data></data>
        </message>
        <header>
          <element name="citrus_jmx_mbean" value="java.lang:type=Memory"/>
          <element name="citrus_jmx_attribute" value="Verbose"/>
        </header>
      </send>

      <receive endpoint="jmxClient">
        <message type="plaintext">
          <data>true</data>
        </message>
      </receive>
    </actions>
  </testcase>
</spring:beans>